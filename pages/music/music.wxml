<view class="music">
<audio name="{{name}}" poster="{{ poster }}" author="{{author}}" src="{{src}}" id="myAudio" bindplay="bindplay" bindtimeupdate="tiemUpdate" controls loop></audio>
<view class="custom-control">
  <slider class="slider" bindchange="sliderChange" block-size="14"
  value="{{ current }}" min="0" max="{{ duration }}" />
  <cover-image class="bf" bindtap="audioPause"  hidden="{{ !isPlay }}" src="{{ bfSrc }}"></cover-image>
  <cover-image class="zt" bindtap="audioPlay" hidden="{{ isPlay }}" src="{{ ztSrc }}"></cover-image>
</view>
</view>