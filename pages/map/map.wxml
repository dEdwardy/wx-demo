<!--pages/map/map.wxml-->
<view class="map">
  <view class="container">
    <map longitude="{{ longitude }}" show-location="true" latitude="{{ latitude }}"></map>
    <view class="operate">
      <button class="weui-btn" type="primary" bindtap="chooseLocation">选择地址</button>
      <button class="weui-btn" type="primary" bindtap="seeLogs">查看日志</button>
    </view>
  </view>
</view>