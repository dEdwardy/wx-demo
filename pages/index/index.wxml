<!--index.wxml-->
<view class="container">
  <view class="login-form">
    <input class="username" style="text-align: center" maxlength="12" bindinput="inputName" auto-focus placeholder="用户名" placeholder-class="center"/>
    <input class="password" style="text-align: center" maxlength="12" password bindinput="inputPass" placeholder="密码" placeholder-class="center"/>
  </view>
  <view>
   <button class="login-btn" bindtap="login">登录</button>
  </view>
</view>